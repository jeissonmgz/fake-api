---
interface Props {
    href: string;
    type?: 'primary' | 'secundary';
}

const { href, type = 'primary' } = Astro.props;
const className = type === 'primary'? 
    "w-40 bg-gradient-to-r from-indigo-500 to-blue-500 text-l py-2 px-4 rounded" 
    : "w-40 py-2 px-4 rounded bg-zinc-800";
---
<a
    class= {`${className} flex items-center gap-2`}
    href={href}>
        <slot />
</a>

