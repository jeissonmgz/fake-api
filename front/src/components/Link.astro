---
interface Props {
    href: string;
    type?: 'primary' | 'secundary';
}

const { href, type = 'primary' } = Astro.props;
const className = type === 'primary'? "w-32 bg-gradient-to-r from-indigo-500 to-blue-500 text-l py-2 px-4 rounded" : "";
---
<a
    class= {className}
    href={href}>
        <slot />
</a>

