---
interface Props {
    type: 'submit' | 'button';
    color?: 'primary' | 'secundary';
    id?: string;
}

const { type, color = 'primary', id } = Astro.props;
const bg = color === 'primary'? 'bg-gradient-to-tr from-indigo-500 to-blue-500' : 'bg-indigo-500';
---
<button
    id={id}
    class={`w-32 ${bg} text-l py-2 px-4 rounded font-bold`}
    type={type}>
    <slot />
</button>

